    <div class="page-header" style="background-image: url('assets/img/login-image.jpg');">
      <div class="filter"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-4 ml-auto mr-auto">
            <div style="margin: 15px 0 20px 0; margin-right:auto; margin-left:auto; width:450px;" class="card card-register">
              <h2 class="title mx-auto" style="font-weight:bold">Welcome</h2>
              
              <% if(locals.msg){ %>
                <h6 class="title mx-auto"><%= msg %></h6>
              <% } %>
              <form class="register-form" method="POST" action="/auth/login">
                <label >Username</label>
                <input type="text" name="username" class="form-control" placeholder="Username" required>
                <label>Password</label>
                <input type="password" name = "password" class="form-control" placeholder="Password" required>
                <div class="text-center">
                  <input type="submit" class="btn btn-danger btn-block btn-round" value="Let's Go">
                </div>
              </form>
              <!-- {% if flag == 0 %} -->
              <!-- <div class="alert alert-warning" role="alert"> Incorrect Username of Password! Please try again.
              </div> -->
              <!-- {% endif %} -->
              <div class="forgot">
                <a href="#" class="btn btn-link btn-secondary">Forgot password?</a>
              </div>
            </div>
          </div>
        </div>
      </div>
